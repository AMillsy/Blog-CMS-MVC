<div class="login-container">
  <form class="forms" id="login">
    <div class="imgcontainer">
      <h3>Login</h3>
    </div>

    <div class="form-container">
      <label for="uname"><b>Username</b></label>
      <input
        type="text"
        placeholder="Enter Username"
        name="username"
        required
      />
      <label for="psw"><b>Password</b></label>
      <input
        type="password"
        placeholder="Enter Password"
        name="password"
        required
      />
      <p class="warn-login" id="login-warning">Login in failed, Please Try again</p>
      <button class="btn formbtn hover-effect" type="submit">Login</button>
    </div>
  </form>
</div>

<script src="/js/login.js"></script>